{% extends 'base.html.twig' %}

{% block title %}ChangePassword{% endblock %}

{% block body %}

<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                {{ form_start(ChangePassword) }}
                <p class="text-secondary h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Changer le mot de passe</p>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      {{ form_row(ChangePassword.password.first, {
                          attr: {'placeholder':'Nouveau mot de passe'},
                          label: false
                      }) }}
                    </div>
                  </div>
                  
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                     {{ form_row(ChangePassword.password.second, {
                        attr: {'placeholder':'Confirmation mot de passe'},
                        label: false
                      }) }}
                    </div>
                  </div>
                
                  <div class="text-secondary">
                    <button type="submit" class="btn btn-primary btn-lg">Envoyer</button>
                  </div>

                  <a class="text-secondary" href="{{ path('app_bazar')}}">Retour bazar</a>
                  


                {{ form_end(ChangePassword) }}

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="{{asset('assets/img/logo/change_password.jfif') }}" alt="">
              

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


{% endblock %}


