{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    

<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                {{ form_start(registrationForm) }}
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">S'enregistrer</p>

                

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                   {{ form_row(registrationForm.email, {

                    
                    attr: {'placeholder':'Email'},
                    
                    }) }}
                    </div>
                  </div>




                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user-circle fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                    {{ form_row(registrationForm.name, {

                    
                    attr: {'placeholder':'Prénom'},
                    
                    }) }}
                    </div>
                  </div>

                 <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user-circle fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                    {{ form_row(registrationForm.surname, {

                    
                    attr: {'placeholder':'Nom'},
                    
                    }) }}
                    </div>
                  </div>


                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      {{ form_row(registrationForm.password.first, {
                          attr: {'placeholder':'Mot de passe'},
                      }) }}
                    </div>
                  </div>
                  
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                     {{ form_row(registrationForm.password.second, {
                        attr: {'placeholder':'Confirmation mot de passe'},
                      }) }}
                    </div>
                  </div>
                
                  <div class="form-check d-flex justify-content-center mb-5">
                   
                    {{ form_row(registrationForm.agreeTerms, {

                      attr: {'class':'form-check-input me-2','class':'.translate-middle'},
                      label:'Je confirme et accepte les CGU'
                    }) }}
                     
                  
                  </div>
                  
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg">S'enregistrer</button>
                  </div>

                  <a class="text-secondary" href="{{ path('app_forgotpass')}}">Mot de passe oublié?</a>
                  


                {{ form_end(registrationForm) }}

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


{% endblock %}
